#include <iostream>
using namespace std;


#ifndef PLAYERLIST_H
#define PLAYERLIST_H

class playerList
{
 public:
  playerList();
  ~playerList();
 bool isEmpty();
 bool appendPlayer(int ID, string name);
 bool removePlayer(int ID);
 void printList();
 void reverseList();
 void reversePairs();
 int playGame(int M);
 string returnWinName();

 
 private:
  struct Node{
	int playerID;
	string playerName;
	Node* next;
  };
  Node* head;
  Node* tail;
  string winnerName;
  int winnerID;
};
#endif
